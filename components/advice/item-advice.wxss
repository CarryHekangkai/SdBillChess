/* components/advice/item-advice.wxss */
.advice-item {
  display: flex;
  padding: 20rpx;
  margin: 20rpx;
  background: wheat;
  border-radius: 16rpx;
}

.advicer-head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 50rpx 0;
}

.advice-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  position: relative;
  margin-left: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #2c2c2c;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.bottom {
  position: absolute;
  bottom: 0rpx;
  display: flex;
  width: 100%;
  align-items: center;
}

.author {
  font-size: 20rpx;
  color: #25c6fc;
  border: 1px solid #25c6fc;
  border-radius: 8rpx;
  padding: 5rpx;
}

.date {
  font-size: 20rpx;
  color: #bfbfbf;
  padding-left: 10rpx;
  flex: 1;
}

.support {
  width: 50rpx;
  height: 50rpx;
}

.supportCount {
  margin-right: 10rpx;
}

.hate {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(180deg);
}