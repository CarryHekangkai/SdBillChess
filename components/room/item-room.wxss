/* components/chess/chess.wxss */
.room-item {
  position: relative;
  display: flex;
  padding: 20rpx;
  margin: 20rpx;
  background: wheat;
  border-radius: 16rpx;
}

.room-pic {
  width: 200rpx;
  height: 200rpx;
  align-self: center;
}

.room-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  position: relative;
  margin-left: 20rpx;
}

.info {
  display: flex;
  flex-direction: row;
}

.room-id {
  font-size: 42rpx;
  font-style: inherit;
  font-family: 黑体;
  color: #2c2c2c;
}

.room-size {
  font-size: 32rpx;
  color: #25c6fc;
  font-style: italic;
}

.last-user-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.last-user-name {
  height: 30rpx;
  font-size: 24rpx;
  color: #25c6fc;
  border: 1px solid #25c6fc;
  border-radius: 8rpx;
  padding: 5rpx;
  align-self: center;
}

.title {
  font-size: 32rpx;
  color: #2c2c2c;
}

.order-time {
  font-size: 24rpx;
  color: #2c2c2c;
}

.order {
  position: relative;
  height: 38rpx;
  font-size: 30rpx;
  color: blue;
  border: 1px solid blue;
  border-radius: 8rpx;
  padding: 5rpx;
}