/* components/comment/comment.wxss */
.super-page-box {
	background-color: rgba(51, 51, 51, 0.35);
	position: fixed;
	width: 100vw;
	height: 100vh;
	z-index: 99;
	animation: supermodal 200ms;
}

@keyframes supermodal{
	0% {
		transform: scaleY(0);
	}
	50% {
		transform: scaleY(0.5);
	}
	100% {
		transform: scaleY(1);
	}
}

.super-modal-box {
	position: fixed;
	z-index: 999;
	height: 40%;
	width: 100vw;
	bottom: 0rpx;
	left: 0rpx;
}

.super-modal-body-box {
	background-color: #ffffff;
	border-top-left-radius: 30rpx;
	border-top-right-radius: 30rpx;
	height: 100%;
	width: 100%;
}

.super-modal-title {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
	height: 105rpx;
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	color: #222222;
}

.text-wrapper {
  position: relative;
  display: flex;
  height: 210rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin: 0 20rpx;
  flex: 1;
}

.text-input {
  display: flex;
  height: 150rpx;
  margin: 20rpx 20rpx 50rpx 20rpx;
  font-size: 30rpx;
}

.input-count {
  position: absolute;
  bottom: 5rpx;
  right: 10rpx;
}

.submit-btn {
	width: 450rpx;
	height: 95rpx;
	border-radius: 20rpx;
	background-color: #0dc161;
	color: #ffffff;
	font-size: 28rpx;
	font-weight: bold;
	margin: auto;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}