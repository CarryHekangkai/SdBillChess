/* pages/advice/advice.wxss */
.advice-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  padding: 10rpx 0;
}

.advice-list {
  padding-bottom: 200rpx;
}

.advice-input {
  position: fixed;
  right: 0rpx;
  bottom: 0rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  z-index: 10;
}

.advice-input image {
  width: 120rpx;
  height: 120rpx;
}